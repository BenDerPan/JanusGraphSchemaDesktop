<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox fx:id="rootLayout" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="800.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="JanusGraphSchemaDesktop.MainController">
<children>
    <ToolBar prefHeight="40.0" prefWidth="500.0">
        <items>
            <Label text="Janusgraph配置文件路径:" />
            <TextField fx:id="tbConfigFile" prefWidth="600" text="./conf/gremlin-server/janusgraph-cql-es-server.properties" />
            <Button fx:id="btnChooseConfigFile" mnemonicParsing="false" onAction="#onChooseConfigFile" text="浏览..." />
            <Button fx:id="btnConnect" mnemonicParsing="false" onAction="#onConnect" text="连接图库" />
        </items>
        <VBox.margin>
            <Insets left="5.0" right="5.0" />
        </VBox.margin>
    </ToolBar>
</children>
</VBox>
